# CloudDrive2 Media Streaming Application Configuration

# Application Settings
APP_NAME=CloudDrive2 Media Streaming
APP_VERSION=1.0.0
DEBUG=False
HOST=0.0.0.0
PORT=8000

# CloudDrive2 Settings
# Change this to your CloudDrive2 mount path
# For testing locally without CloudDrive2, you can use ./test_files
CLOUDDRIVE_MOUNT_PATH=/mnt/clouddrive
ALLOWED_EXTENSIONS=mp4,mkv,avi,mov,wmv,flv,webm,mp3,wav,flac,aac,ogg,m4a,pdf,doc,docx,txt,epub

# Security Settings
SECRET_KEY=change-this-secret-key-in-production-use-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Authentication (set to enable)
# AUTH_USERNAME=admin
# AUTH_PASSWORD=secure_password_here

# Cache Settings
CACHE_ENABLED=True
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Streaming Settings
CHUNK_SIZE=1048576
MAX_CHUNK_SIZE=10485760
BUFFER_SIZE=65536
ENABLE_RANGE_REQUESTS=True

# Performance Settings
MAX_WORKERS=4
KEEP_ALIVE_TIMEOUT=75

# CORS Settings
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Redis (optional, for distributed caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
